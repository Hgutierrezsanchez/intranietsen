           var dbdatos = [
             {% for d in db_users if false != db_users %}
             '{{d.nombres}}',
             '{{d.rut}}',
             {% endfor %}
           ];
           $('#busca').autocomplete({
             source: dbdatos
           });
         });
         </script>
