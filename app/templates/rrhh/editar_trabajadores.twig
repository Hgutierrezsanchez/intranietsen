{% extends 'portal/portal' %}
{% block appStylos %}
{% endblock %}
{% block appBody %}
    <section class="content-header">
        <h1>
            RRHH
            <small>Editar</small>
        </h1>
        <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="rrhh/mantenedores_crud_masters">Mantenedores</a></li>
        <li><a href="rrhh/listar_trabajadores">Listado de Trabajadores</a></li>
        <li class="active">Editar Trabajador</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <form id="update_trabajador_form"  action="" method="POST">
              <div class="box-body col-sm-4"></div>
              <div class="box-body col-sm-4">
                <input type='hidden' name='id_personal' id='id_personal' value='{{ db_trabajador.id_personal }}' />
                <div class="form-group">
                  <input class="form-control" name="rut" id="rut" type="text" placeholder="RUT xxxxxxxx s/digito (Requerido)" value='{{ db_trabajador.rut }}'/>
                  <input class="form-control" name="nombres" id="nombres" type="text" placeholder="Nombre Completo (Requerido)" value='{{ db_trabajador.nombres }}'/>
                  <input class="form-control" name="fono" id="fono" type="text" placeholder="Fono" value='{{ db_trabajador.fono }}'/>
                </div>
                <div class="form-group">Fecha Nacimiento
                  <input class="form-control" name="f_nacimiento" id="f_nacimiento" type="date" value='{{ db_trabajador.f_nacimiento }}'/>
                </div>
                <div class="form-group">Cargo
                  <select name='cargo' id='cargo' class='form-control'>
                    <option>--</option>
                    {% for p in cargos_db if false != cargos_db %}
                      {% if p.id_cargo == db_trabajador.id_cargo  %}
                        <option value='{{ p.id_cargo }}' selected='selected'>{{ p.descripcion }}</option>
                      {% else %}
                        <option value='{{ p.id_cargo }}'>{{ p.descripcion }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
                <div class="form-group">Area
                  <select name='area' id='area' class='form-control'>
                    <option>--</option>
                    {% for p in areas_db if false != areas_db %}
                      {% if p.id_area == db_trabajador.id_area  %}
                        <option value='{{ p.id_area }}' selected='selected'>{{ p.descripcion }}</option>
                      {% else %}
                          <option value='{{ p.id_area }}'>{{ p.descripcion }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
                <div class="panel-footer text-center">
                  <button type="button" id="update_personal" class="btn btn-default">Grabar</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->

{% endblock %}
{% block appScript %}
    <script src="views/app/js/rrhh/rrhh.js"></script>
{% endblock %}
